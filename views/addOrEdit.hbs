<h3>{{viewTitle}}</h3>

<form action="/" method="POST" autocapitalize="off">
    <input type="hidden" name="_id" value="{{task._id}}">
    <div class="form-group">
        <label>Task Name</label>
        <input type="text" class="form-control" name="task" value="{{task.task}}" placeholder="Task name">
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="description" value="{{task.description}}"
            placeholder="Task description">
    </div>
     <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/list" class="btn btn-success">ViewAll</a>
    </div>


</form>